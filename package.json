{
  "name": "optimizing-and-testing-flashcards",
  "version": "1.0.0",
  "description": "A flashcard application demonstrating optimization and testing best practices with Parcel, ESLint, and comprehensive testing using Mocha and Cypress",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "parcel index.html --port 1234",
    "build": "parcel build index.html",
    "clean": "rm -rf dist .parcel-cache",
    "gulp": "gulp",
    "test": "mocha test/**/*.js",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "e2e": "start-server-and-test dev http://localhost:1234 cypress"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "cypress": "^13.6.1",
    "eslint": "^8.56.0",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-shell": "^0.8.0",
    "mocha": "^10.2.0",
    "parcel": "^2.10.3",
    "prettier": "^3.1.1",
    "start-server-and-test": "^2.1.2"
  },
  "keywords": [
    "flashcards",
    "testing",
    "optimization",
    "parcel",
    "cypress",
    "mocha"
  ]
}
